datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Users {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    email     String   @unique
    username  String?
    password  String
}

model Devices {
    id           String @id @default(cuid())
    address      String @unique
    type         String
    capabilities Json
    preferences  Json
}
